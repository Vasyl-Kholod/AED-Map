{
  "name": "backend",
  "version": "1.0.0",
  "description": "backend part of defibrillator project",
  "main": "server.js",
  "scripts": {
    "start": "node start.js",
    "build": "cd client && yarn build",
    "start:client": "cd client/ && yarn start",
    "start:server:dev": "env-cmd -e development -r ./environment/cmdrc.json nodemon start.js",
    "start:server:prod": "env-cmd -e development,production -r ./environment/cmdrc.json nodemon start.js",
    "dev": "concurrently --kill-others-on-fail \"yarn start:server:dev\" \"yarn start:client\"",
    "lint": "eslint server.js ./config ./models ./api ./shared --ext .js",
    "test-client": "cd client/ && yarn test",
    "test-server": "cross-env NODE_ENV=node jest api --coverage",
    "database-up": "migrate-mongo up -f ./migrate-mongo-config.js",
    "database-down": "migrate-mongo down -f ./migrate-mongo-config.js",
    "database-status": "migrate-mongo status -f ./migrate-mongo-config.js"
  },
  "jest": {
    "testEnvironment": "node",
    "testPathIgnorePatterns": [
      "/client/"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "./shared/websocket/*.js",
      "./shared/middleware/*.js",
      "./db/migrations/*.js"
    ],
    "collectCoverageFrom": [
      "./api/*.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 70,
        "functions": 60,
        "lines": 70,
        "statements": 70
      }
    }
  },
  "lint-staged": {
    "*.(js|jsx)": [
      "yarn lint --fix",
      "git add"
    ]
  },
  "keywords": [
    "nodejs",
    "express",
    "mongodb"
  ],
  "author": "LV-469",
  "license": "ISC",
  "dependencies": {
    "axios": "^0.19.2",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "deep-equal": "^2.0.1",
    "express": "^4.17.1",
    "express-validator": "^6.3.1",
    "gridfs-stream": "^1.1.1",
    "jsonwebtoken": "^8.5.1",
    "long-timeout": "^0.1.1",
    "migrate-mongo": "^7.1.0",
    "mongoose": "^5.9.5",
    "multer": "^1.4.2",
    "multer-gridfs-storage": "^4.0.2",
    "nodemailer": "^6.4.2",
    "passport": "^0.4.1",
    "passport-jwt": "^4.0.0",
    "password-validator": "^5.0.3",
    "socket.io": "^2.3.0"
  },
  "devDependencies": {
    "concurrently": "^5.0.2",
    "cross-env": "^7.0.0",
    "dotenv": "^8.2.0",
    "eslint": "^6.6.0",
    "env-cmd": "^10.1.0",
    "eslint-config-node": "^4.0.0",
    "eslint-config-prettier": "^6.9.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-node": "^11.0.0",
    "eslint-plugin-prettier": "^3.1.2",
    "husky": "^4.2.0",
    "jest": "24.9.0",
    "lint-staged": "^10.0.2",
    "nodemon": "^2.0.2",
    "prettier": "^1.19.1",
    "supertest": "^4.0.2"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/LV-469/defibrillator"
  }
}
