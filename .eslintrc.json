{
  "env": {
    "node": true,
    "es6": true
  },
  "extends": ["prettier"],
  "plugins": ["prettier"],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaVersion": 2018
  },
  "rules": {
    "avoidEscape": true,
    "semi": ["error", "always"],
    "quotes": ["error", "single"],
    "allowTemplateLiterals": true,
    "linebreak-style": [0, "unix"],
    "indent": ["error", 2, { "SwitchCase": 1 }],
    "no-multiple-empty-lines": ["error", { "max": 1 }]
  }
}
